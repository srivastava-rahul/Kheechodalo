<!-- *************************** -->
		<!-- FileUpload -->
		<!-- *************************** -->
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.3</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.2</version>
		</dependency>

		<dependency>
		    <groupId>commons-codec</groupId>
		    <artifactId>commons-codec</artifactId>
		    <version>1.2</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>MyProject</finalName>

		<plugins>
			<!-- Eclipse project -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<!-- Always download and attach dependencies source code -->
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
					<!-- Avoid type mvn eclipse:eclipse -Dwtpversion=2.0 -->
					<wtpversion>2.0</wtpversion>
				</configuration>
			</plugin>
			<!-- *************************** -->
			<!-- MAVEN PLUGIN -->
			<!-- *************************** -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>ws-artifacts</directory>
							<includes>
								<include>*</include>
							</includes>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<nonFilteredFileExtensions>
						<nonFilteredFileExtension>jasper</nonFilteredFileExtension>
					</nonFilteredFileExtensions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>



			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>9.2.11.v20150529</version>
				<configuration>
					<!-- <scanIntervalSeconds>3</scanIntervalSeconds> -->
					<stopKey>foo</stopKey>
					<stopPort>9966</stopPort>
					<webApp>
						<contextPath>/KheechoDalo</contextPath>
						<maxFormContentSize>600000</maxFormContentSize>
					</webApp>
					<httpConnector>
						<port>7070</port>
					</httpConnector>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.*</include>
				</includes>
				<excludes>
					<exclude>**/*.template</exclude>
					<exclude>**/*.xls</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.template</include>
					<include>**/*.xls</include>
				</includes>
			</resource>
		</resources>
		<!-- <testResources> <testResource> <directory>src/test/resources</directory> 
			<filtering>true</filtering> <includes> <include>**/*.*</include> </includes> 
			<excludes> <exclude>**/*.xls</exclude> <exclude>**/*.template</exclude> </excludes> 
			</testResource> <testResource> <directory>src/test/resources</directory> 
			<filtering>false</filtering> <includes> <include>**/*.template</include> 
			<include>**/*.xls</include> </includes> </testResource> </testResources> -->
	</build>
	<properties>
		<java.version>1.7</java.version>
		<spring.version>4.3.3.RELEASE</spring.version>
		<hibernate.version>5.1.0.Final</hibernate.version>
		<spring-security.version>4.1.0.RELEASE</spring-security.version>


		<db.mode>true</db.mode>
		<db.schema>KHEECHODALO</db.schema>
		<db.jpa.type>MYSQL</db.jpa.type>
		<db.driver>com.mysql.jdbc.Driver</db.driver>
		<db.url>jdbc:mysql://localhost:3306/KHEECHODALO</db.url>
		<db.username>root</db.username>
		<db.password>root</db.password>
		<db.dialect>org.hibernate.dialect.MySQLDialect</db.dialect>
		<db.connection.timeout>10000</db.connection.timeout>
		<log.path>${user.home}/logs/</log.path>
		<app.url>http://localhost:7070/KheechoDalo</app.url>
	</properties>
</project>
